<!DOCTYPE html>
<html lang="en">

<%- include('header') %>

<body>
	
	<%- include('body-header') %>
	
	<section id="form"><!--form-->
		<div class="container" style="margin-bottom: 150px;">
			<div class="row align-items-center">
				<div class="col-sm-4 col-sm-offset-1">
					<div class="login-form" id="login_container">
						<% if (acc) { %>
							<h2>Xin chào <%= acc.lastName + ' ' + acc.firstName %>  </h2>
							<h2>Vui lòng kích hoạt tài khoản của bạn!</h2>
						<% }%>
						<form action="/code-activated/<%= acc.username %> " method="POST" >
							<div class="form-group">
								<input class="form-control" type="text" id = 'verification' name='verification' placeholder="Nhập mã xác nhận">
							</div>
							<td>
							<button type="submit" class="btn btn-default" style="display: inline;">Xác nhận</button>
							<a class="btn btn-default" onclick="handleSendEmailAgain('<%= acc.username %>')" style="margin: 23px 15px 0;">
								Gửi lại Email
							</a>
							</td>
						</form>
					</div>
				</div>
			</div><!--/sign up form-->
		</div>
	</section><!--/form-->
	
	<%- include('footer') %> 

	<script>
	  function handleSendEmailAgain(username) {
			$.ajax({
				url: '/code-activated/resend-email/' + username,
				type: 'POST',
			})
		}
	</script>
</body>
</html>